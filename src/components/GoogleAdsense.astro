---
//## rk begin
export interface Props {
  enabled: string,
  publisherId: string,
  localTest: string
}

const { enabled = 'no'}         = Astro.props
const { publisherId = '' }      = Astro.props
const { localTest = 'off' }     = Astro.props
---

{
  enabled === 'yes' && publisherId && (
    <>
    <script
      async
      src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-${publisherId}`}
      crossorigin="anonymous">
    </script>
    <ins
      class="adsbygoogle"
      style="display:block"
      data-ad-client={`ca-${publisherId}`}
      data-ad-format="auto"
      data-full-width-responsive="true"
      data-adtest={`${localTest}`}
    ></ins>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    </>
  )
}
